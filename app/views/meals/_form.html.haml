= form_for @meal do |f|
  -if @meal.errors.any?
    #error_explanation
      %h2= "#{pluralize(@meal.errors.count, "error")} prohibited this meal from being saved:"
      %ul
        - @meal.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :optional
    = f.check_box :optional
  .field
    = f.label :order
    = f.number_field :order
  .actions
    = f.submit 'Save'
